<!-- NAV BAR: -->
<ul>
  <li><%= link_to("Subjects", subjects_path) %></li>
  <li><%= link_to("Pages", pages_path) %></li>
  <li><%= link_to("Sections", sections_path) %></li>
</ul>
<!-- NAV BAR: -->
<br/>
<div class="flash-container">
  <%= flash[:message] if !flash[:message].blank? %>
</div>

<h1>Subjects list:</h1>

<table>
  <tr>
    <th>Sr No.</th>
    <th>Subject Name</th>
    <th>Position</th>
    <th>Visible</th>
    <th>Actions</th>
  </tr>
  <% @subjects.each do |subject| %>
  <tr>
    <td><%=subject.id %></td>
    <td><%=subject.name %></td>
    <td><%=subject.position %></td>
    <td><%=subject.visible ? "Yes" : "No"  %></td>
    <td><%= link_to('Show', subject_path(subject)) %></td> <!-- By default, RAILS send id even if we provide Object -->
    <td><%= link_to('Edit', edit_subject_path(subject)) %></td>
    <td><%= link_to('Delete', subject_path(subject), method:'delete') %></td>
  </tr>
    <% end %>
</table>
<br/>
<div class="action new">
  <%= link_to("Create New Subject",new_subject_path) %>
</div>
