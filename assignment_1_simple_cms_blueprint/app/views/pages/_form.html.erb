<!-- PARTIAL name always start with underscore '_' -->
<table>
  <tr>
    <th>Page Name</th>
    <td><%= f.text_field(:name) %> </td>
  </tr>
  <tr>
    <th>Subject Id</th>
    <td><%= f.select(:subject_id, @subjects_lookup) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.select(:position, 1..@pages_count) %></td>
  </tr>
  <tr>
    <th>Permalink</th>
    <td><%= f.text_field(:permalink) %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= f.check_box(:visible) %></td>
  </tr>
</table>
