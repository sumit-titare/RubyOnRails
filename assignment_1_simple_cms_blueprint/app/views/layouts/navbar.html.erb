<!--NOTE:  Any instance variable from controller or view is accessible here in layout. -->

<!DOCTYPE html>
<html>
<head>
  <title></title>
  <!-- Adding application.css file as stylesheet-->
  <%= stylesheet_link_tag "application" %>
</head>
<body>
  <!-- NAV BAR: -->
  <ul>
    <li><%= link_to("Subjects", subjects_path) %></li>
    <li><%= link_to("Pages", pages_path) %></li>
    <li><%= link_to("Sections", sections_path) %></li>
    <% if(session[:user_id]) %>
      <li><%= link_to("Log out", access_logout_path) %></li>
    <% else %>
      <li><%= link_to("Log In", access_login_path) %></li>
    <% end %>
  </ul>
  <!-- NAV BAR: -->

  <br/>
  <div class="flash-container">
    <%= flash[:message] if !flash[:message].blank? %>
  </div>
  <div class="welcom-user">
  <% if(session[:user_id]) %>
      <span><%="Hey, #{session[:username]}!!" %></span>
  <% end %>
  </div>
   <!-- before yield -->
 <%= yield %>
  <!-- after yield %> -->

</body>
</html>
