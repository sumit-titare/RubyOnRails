<h1>Show Section:</h1>

<table>
  <tr>
    <th>Section Name</th>
    <td><%= @section.name %> </td>
  </tr>
  <tr>
    <th>Page Id</th>
    <td><%= link_to(@section.page_id,page_path(@section.page_id)) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= @section.position %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= @section.visible %></td>
  </tr>
  <tr>
    <th>Content Type</th>
    <td><%= @section.content_type %></td>
  </tr>
  <tr>
    <th>Content</th>
    <td><%= @section.content %></td>
  </tr>
</table>

<div class="action index">
  <br/>
<%= link_to("Back to sections", sections_path) %>
</div>
