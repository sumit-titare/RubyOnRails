<h1>Create new Section</h1>

<%= form_for(@section, url: sections_path(@section, page_id: @page.id)) do |f| %>
<%= render(partial: 'form', locals: {f: f}) %>
<div class="form-buttons">
  <%= f.submit("Create Section") %>
</div>
<% end %>

<div class="action index">
  <br/>
<%= link_to("Back to sections", sections_path(page_id: @page.id)) %>
</div>
